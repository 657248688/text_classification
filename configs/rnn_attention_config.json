{
    "name": "text_binary_classification",
    "n_gpu": 1,

    "model_arch": {
        "type": "RnnAttentionModel",
        "args": {
            "rnn_type": "rnn",
            "embedding_dim": 300,
            "hidden_dim": 256,
            "output_dim": 1,
            "n_layers": 1,
            "bidirectional": false,
            "dropout": 0,
            "batch_first": false
        }
    },
    "dataset": {
        "type": "WeiboDataset",
        "args": {
            "data_path": "data/weibo/weibo_senti_100k.csv",
            "stop_words_path": "",
            "batch_first": false,
            "include_lengths": true
        }
    },
    "data_loader": {
        "type": "WeiboDataLoader",
        "args": {
            "split_ratio": 0.7,
            "batch_size": 128,
            "shuffle": true,
            "use_pretrained_word_embedding": true,
            "word_embedding_path": "data/word_embedding/sgns.weibo.bigram",
            "sort_within_batch": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_crossentropy_loss",
    "metrics": [
        "binary_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "saved": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
